<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
   "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
   "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!-- Config de demo para VS Code (Checkstyle + Error Lens) -->
<module name="Checker">

  <!-- Reglas a nivel Checker (no dependen del AST) -->
  <module name="LineLength">
    <property name="max" value="100"/>
    <property name="severity" value="warning"/>
  </module>

  <!-- Reglas basadas en AST -->
  <module name="TreeWalker">

    <!-- Imports / estilo -->
    <module name="AvoidStarImport">
      <property name="severity" value="error"/>
    </module>
    <module name="UnusedImports">
      <property name="severity" value="warning"/>
    </module>

    <!-- Convenciones de nombres -->
    <module name="TypeName">          <!-- Clases/Interfaces en PascalCase -->
      <property name="severity" value="error"/>
    </module>
    <module name="MethodName">        <!-- Métodos en lowerCamelCase -->
      <property name="severity" value="error"/>
    </module>
    <module name="LocalVariableName"> <!-- Variables locales en lowerCamelCase -->
      <property name="severity" value="error"/>
    </module>
    <module name="ConstantName">      <!-- CONSTANTES_EN_MAYUS -->
      <property name="severity" value="error"/>
    </module>

    <!-- Bloques vacíos comunes (NO métodos/constructores en tu versión) -->
    <module name="EmptyBlock">
      <property name="tokens"
                value="LITERAL_TRY, LITERAL_FINALLY,
                       LITERAL_IF, LITERAL_ELSE,
                       LITERAL_SWITCH,
                       LITERAL_WHILE, LITERAL_DO, LITERAL_FOR,
                       LITERAL_SYNCHRONIZED,
                       STATIC_INIT, INSTANCE_INIT"/>
      <property name="option" value="STATEMENT"/>
      <property name="severity" value="warning"/>
    </module>

    <!-- Catch vacío específico -->
    <module name="EmptyCatchBlock">
      <property name="severity" value="warning"/>
    </module>

    <!-- Indentación -->
    <module name="Indentation">
      <property name="severity" value="info"/>
      <property name="basicOffset" value="2"/>
    </module>

  </module>
</module>
